@model LuzApp.Common.Entities.Neighborhood

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Barrio</h2>

hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditNeighborhood">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdCity" />

            <partial name="_Neighborhood" />

            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-primary" />
                <a asp-action="DetailsCity" asp-route-id="@Model.IdCity" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}